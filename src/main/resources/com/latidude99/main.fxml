<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minWidth="700.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.latidude99.MainController">
   <children>
      <HBox>
         <children>
            <ProgressBar id="progress-bar" fx:id="progressBar" prefHeight="10.0" prefWidth="700.0" progress="0.0" stylesheets="@../../style.css" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label id="path-lbl" fx:id="pathLbl" prefWidth="430.0" text="File Path">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button id="stop-btn" fx:id="stopBtn" alignment="CENTER_RIGHT" prefWidth="135.0" text="Stop" textAlignment="CENTER" />
                  <Button id="cancel-btn" fx:id="cancelBtn" alignment="CENTER_RIGHT" prefWidth="135.0" text="Cancel" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
